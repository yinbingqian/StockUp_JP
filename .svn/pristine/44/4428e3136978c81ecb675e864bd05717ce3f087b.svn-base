<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mm_listitem"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="6dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_date_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chatting_time_bg"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize13" />

        <TextView
            android:id="@+id/tv_realname_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize13" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/img_head_right"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:focusable="false"
            android:src="@drawable/carloong_radar_item_default" />

        <LinearLayout
            android:id="@+id/chat_msg_list_item_content_tv_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/img_head_right"
            android:orientation="vertical"
            android:paddingRight="10dp" >

            <LinearLayout
                android:id="@+id/chat_msg_list_item_content_xw"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:background="@drawable/chat_msglist_item_right"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:orientation="vertical"
                android:padding="8dp" >

                <TextView
                    android:id="@+id/tv_title_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:maxLines="2"
                    android:textColor="@color/font_grey2"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp" >

                    <ImageView
                        android:id="@+id/img_content_url_right"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_loader_defult" />

                    <TextView
                        android:id="@+id/tv_content_right"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="5"
                        android:paddingLeft="8dp"
                        android:text="重大新闻重大新闻重大新闻重大新闻重大新闻重大新闻重大新闻重大新闻重大新闻"
                        android:textColor="@color/font_grey1"
                        android:textSize="10sp"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

            <CheckBox
                android:id="@+id/checkbox_select"
                style="@style/CustomCheckboxTheme"
                android:layout_marginLeft="42dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="采纳"
                android:textColor="@color/grey"
                android:textSize="14sp" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>