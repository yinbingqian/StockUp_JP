<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/normal_height54"
        android:background="@drawable/title_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/normal_height54"
            android:layout_height="@dimen/normal_height54"
            android:layout_gravity="center"
            android:background="@drawable/head_background_select"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/img_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="重置密码"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize23"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_submit"
            android:layout_width="@dimen/normal_height54"
            android:layout_height="@dimen/normal_height54"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/head_background_select"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize18" />
    </RelativeLayout>

    <AutoCompleteTextView
        android:id="@+id/actv_password"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:hint="新密码"
        android:inputType="textNoSuggestions"
        android:textColor="#d5d5d5"
        android:textSize="17dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:gravity="center_vertical" >

        <AutoCompleteTextView
            android:id="@+id/actv_password_again"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:hint="重写新密码"
            android:inputType="textNoSuggestions"
            android:textColor="#d5d5d5"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/getretrieve_tv"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/retrieve_et"
            android:background="@null"
            android:gravity="center"
            android:text="59s"
            android:textColor="@color/red"
            android:textSize="17dp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>